<!-- swiper -->
<swiper indicator-dots="{{false}}" autoplay="{{true}}" interval="{{1000}}" circular="{{true}}">
  <block wx:for="{{swiperList}}" wx:key="id">
    <swiper-item>
      <image src="{{item.image}}" class="slide-image" />
    </swiper-item>
  </block>
</swiper>

<!-- 九宫格 -->
<view class="gird_list">
  <view class="grid_item" wx:for="{{gridList}}" wx:key="id">
    <image src="{{item.icon}}" />
    <text>{{item.name}}</text>
  </view>
</view>

<navigator url="/pages/message/index" open-type="switchTab">跳转页面</navigator>