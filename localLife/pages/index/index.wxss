.gird_list{
  display: flex;
  flex-wrap: wrap;
  margin-top: 20rpx;
}

.grid_item{
  width: 33.3%;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  border-right: 1rpx solid silver;
  border-bottom: 1rpx solid silver;
}

.grid_item:active{
  background-color: silver;
}

.grid_item image{
  width: 60rpx;
  height: 60rpx;
}

.grid_item text{
  font-size: 24rpx ;
}